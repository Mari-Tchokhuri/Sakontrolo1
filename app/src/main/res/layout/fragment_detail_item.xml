<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="30dp"
    android:background="#F7F7F7">

    <TextView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:drawableLeft="@drawable/arrow_left"
        android:text="Detail"
        android:textSize="16sp"
        android:textColor="#242424"
        android:textStyle="bold"
        android:drawableRight="@drawable/heart"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/coffeeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/coffee1"
        android:layout_marginTop="15dp"/>
    
    <LinearLayout
        android:id="@+id/linearMocha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center">



        <LinearLayout
            android:id="@+id/linearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="42dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caffe Mocha"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#242424"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ice/Hot"
                android:textSize="12sp"
                android:textColor="#A1A1A1"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textSize="16sp"
                    android:textColor="#242424"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/star"
                    android:drawableTint="#F9BD21"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(230)"
                    android:textSize="12sp"
                    android:textColor="#A1A1A1"
                    android:paddingLeft="3dp"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearIcons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">


            <com.google.android.material.button.MaterialButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:icon="@drawable/motorbike"
                app:iconSize="24dp"
                app:cornerRadius="12dp"
                android:layout_gravity="center"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="#C47B4D"
                android:backgroundTint="#F3F3F3"
                android:layout_marginLeft="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBeans"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:icon="@drawable/coffee_beans"
                app:iconSize="24dp"
                app:cornerRadius="12dp"
                android:layout_gravity="center"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="#C47B4D"
                android:backgroundTint="#F3F3F3"
                android:layout_marginLeft="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMilk"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:icon="@drawable/carton_milk"
                app:iconSize="24dp"
                app:cornerRadius="12dp"
                android:layout_gravity="center"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="#C47B4D"
                android:backgroundTint="#F3F3F3"
                android:layout_marginLeft="12dp"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="#E3E3E3" />

    <LinearLayout
        android:id="@+id/linearDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Description"
            android:textStyle="bold"
            android:textColor="#242424"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A1A1A1"
            android:text="A cappuccino is an approximately 150 ml (5 oz) beverage, with 25 ml of espresso coffee and 85ml of fresh milk the fo.."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:textColor="#C67C4E"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearSize"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/linearSML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonS"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:text="S"
                android:textSize="14sp"
                android:layout_gravity="center"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:textColor="#242424"
                app:strokeColor="#E3E3E3"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonM"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:text="M"
                android:textSize="14sp"
                android:layout_gravity="center"
                app:cornerRadius="12dp"
                android:backgroundTint="#F9F2ED"
                android:textColor="#C67C4E"
                app:strokeColor="#C67C4E"
                app:strokeWidth="1dp"
                android:layout_marginHorizontal="15dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonL"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:text="L"
                android:textSize="14sp"
                android:layout_gravity="center"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:textColor="#242424"
                app:strokeColor="#E3E3E3"
                app:strokeWidth="1dp"/>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBuyNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginRight="12dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginTop="10dp"
                android:textColor="#909090"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 4.53"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#C67C4E"/>

        </LinearLayout>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buyNowButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            app:cornerRadius="12dp"
            android:backgroundTint="#C67C4E"
            android:text="Buy Now"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"/>
        
    


    </LinearLayout>


</LinearLayout>


